<Page x:Class="Sebestoimost.Helps.HelpContent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sebestoimost.Helps"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HelpContent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Содержание" Margin="5" FontWeight="Bold" />
        <TextBlock Grid.Row="2" Margin="20, 5, 5, 5">
            <Hyperlink NavigateUri="HelpRef.xaml">Справочники</Hyperlink>
        </TextBlock>
        <TextBlock Grid.Row="1" Margin="20, 5, 5, 5">
            <Hyperlink NavigateUri="HelpDoc.xaml">Документы</Hyperlink>
        </TextBlock>
        <TextBlock Grid.Row="3" Margin="20, 5, 5, 5">
            <Hyperlink NavigateUri="HelpReport.xaml">Отчеты</Hyperlink>
        </TextBlock>
    </Grid>
</Page>
